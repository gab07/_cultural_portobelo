<%= form_for @book, html: { multipart: true } do |f| %>
  <form class="form-control">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cover  %>
    <%= f.file_field :cover %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %>
  </div>


  <div class="form-group">
    <%= f.label :Categoria %><br>
      <% @categories.each do |category| -%>
        <%= fields_for 'category[]' , category do |category_fields| -%>
          <ul class="category_list">
            <li class="category_name">
              <%= check_box_tag "category[]", category.id %>  <%=category.name %>
            </li>
          </ul>
        <% end -%>
      <% end -%>
  </div>



  <div class="form-group">
    <%= f.label :publication_year %><br>
    <%= f.select :publication_year, (Time.zone.now.year - 70)..(Time.zone.now.year + 1) %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, :class => 'text_field', :step => 'any' %>
  </div>
  <div class="form-group">
    <%= f.label :country_of_origin %><br>
    <%= f.select :country_of_origin, options_for_select(['España', 'Mexico', 'Colombia','Panamá']) %>
  </div>
 
  

  <div class="actions">
    <%= f.submit %>
  </div>
  </form>
<% end %>
