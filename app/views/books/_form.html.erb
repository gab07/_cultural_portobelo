<div class="row">
  <%= form_for @book, html: { multipart: true } do |f| %>

  <form class="form-control">

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :cover  %>
        <%= f.file_field :cover %>
      </div>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :author %><br>
        <%= f.text_field :author %>
      </div>
      <div class="form-group">
        <%= f.label :publisher %><br>
        <%= f.text_field :publisher %>
      </div>
      <div class="form-group">
        <%= f.label :publication_year %><br>
        <%= f.select :publication_year, (Time.zone.now.year - 70)..(Time.zone.now.year + 1) %>
      </div>
      <div class="form-group">
        <%= f.label :price %><br>
        <%= f.number_field :price, :class => 'text_field', :step => 'any' %>
      </div>
      <div class="form-group">
        <%= f.label :country_of_origin %><br>
        <%= f.select :country_of_origin, options_for_select(['España', 'Mexico', 'Colombia','Panamá']) %>
      </div>
      <div class="form-group">
        <%= f.label :Descripción %><br>
        <%= f.text_area :description %>
      </div>
    </div>

    <div class="col-md-5">
      <%= f.label :Categoria %><br>
      <ul class="category_list">
        <% Category.all.each do |category| %>
          <li class="category_">
            <%= check_box_tag "category_ids[]", category.id, @book.categories.include?(category), :name => 'book[category_ids][]' %>  <%=category.name %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-2">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>

  </form>

  <% end %>
</div>
