<%= form_for @book, html: { multipart: true } do |f| %>
  <form class="form-control">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cover  %>
    <%= f.file_field :cover %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, :class => 'text_field', :step => 'any' %>
  </div>
  <div class="form-group">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %>
  </div>
  <div class="form-group">
    <%= f.label :publication_year %><br>
    <%= f.select :publication_year, (Time.zone.now.year - 70)..(Time.zone.now.year + 1) %>
  </div>
  <div class="form-group">
    <%= f.label :isbn %><br>
    <%= f.number_field :isbn %>
  </div>
  <div class="form-group">
    <%= f.label :pages %><br>
    <%= f.number_field :pages %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category, options_for_select(@categories) %>
  </div>
  <div class="field">
    <%= f.label :language %><br>
    <%= f.select(:language, options_for_select([['Espa単ol', 'Espa単ol'], ['Ingles', 'Ingles']]), :class =>"btn btn-primary dropdown-toggle") %>
  </div>
  <div class="field">
    <%= f.label :binding_type %><br>
    <%= f.select(:binding_type, options_for_select([['Pasta blanda', 'Pasta blanda'], ['Pasta dura', 'Pasta dura']]), :class =>"btn btn-primary dropdown-toggle") %>
  </div>
  <div class="field">
    <%= f.label :language %><br>
    <%= f.select(:language, options_for_select([['Espa単ol', 'Espa単ol'], ['Ingles', 'Ingles']]), :class =>"btn btn-primary dropdown-toggle") %>
  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
  </form>
<% end %>
