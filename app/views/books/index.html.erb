<div class="row root_wrapper">
  <div class="col-md-3">
    <%= render 'books/books_filters' %>
  </div>
  <div class="col-md-8 all-books">
  <!--******* @books = Book.all ******-->
    <div id="books" class="transitions-enabled clearfix books">
      <% @books.each do |book| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(book.cover.url(:medium)), book %>
        <div class="panel-body">
          <p id="index-title">
            <%=h truncate(book.title, :length => 25, :omission => '...') %>
          </p>
          <p id="index-author"><%= book.author %> </p>
          <p id="index-price"><%= book.price %>0 </p>
          <% if current_user %>
            <div class="actions">
              <%= link_to edit_book_path(book) do %>
                <span class="glyphicon glyphicon-pencil"></span> Edit
              <% end %>
              <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span> Delete
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="row row-centered">
  <div class="pagination col-md-6 col-centered">
    <%= will_paginate @books, :previous_label => 'Anterior', :next_label => 'Siguiente', renderer: BootstrapPagination::Rails, class: "pagination" %>
  </div>    
</div>
