<div class="row">

  <div class="col-md-3">
    <aside>
        <button type="button" class="btn btn-default btn-lg">
          <h1> 
            <%= link_to 'Regístrate', new_user_registration_path %>
          </h1>
        </button>
        <article>
          <ul>
            <li>Derecho</li>
            <li>Arquitectura</li>
            <li>Psicología</li>
            <li>Medicina</li>
            <li>Editorial</li>
          </ul>
        </article>
    </aside>
  </div>
  <div class="col-md-9">
    <h1>Novedades</h1>

    <div id="books" class="transitions-enabled">
    <% @books.each do |book| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(book.cover.url(:medium)), book %>
        <div class="panel-body center">
          <% if book.price? %>
            <strong><p><%= book.price %> USD</p></strong>
          <% end %>
          <p id="index_title"><%= book.title %> </p>
          

          <% if current_user %>
            <div class="actions">
              <%= link_to edit_book_path(book) do %>
                <span class="glyphicon glyphicon-pencil"></span> Edit
              <% end %>
              <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span> Delete
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>