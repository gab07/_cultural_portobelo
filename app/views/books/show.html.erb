<div class="row show-wrapper">
	<div class="col-md-3">
		<%= render 'books/books_filters' %>
	</div>
	<div class="col-md-offset-1 col-md-7 show-bookinfo">
		
		<div class="book-cover">
			<%= image_tag @book.cover.url(:medium) %>
		</div>
		
			<ul class="book-info">
				<li>
					<h3><%= @book.title %></h3>
					
					<p>Autor: <%= @book.author %></p>
					<p>AÃ±o: <%= @book.publication_year %></p>
					<p>Editorial: <%= @book.publisher %></p>
				
					<p class="book-category">Categoria:</p>
						<% @book.categories.each do |category| %>
							<p class="book-category"><%= category.name %></p>
						<% end %>
					<p>Precio:<%= @book.price %>0</p>
					<span class="book-description">
						<h4>Resumen</h4>
						<p><%= @book.description %></p>
					</span>
				
					
			</ul>
			<% if current_user  %>
				<%= link_to edit_book_path(@book)  do %>
				  <span class="glyphicon glyphicon-pencil"></span> Edit
				<% end %>
			<% end %>
		</div>
</div>
