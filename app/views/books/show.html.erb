<div class="row show-wrapper">

	<div class="col-md-9 show-bookinfo well md-well books-wrapper">

		<div class="row">	
			<div class="col-xs-3 book-cover text-center">
				<%= image_tag @book.cover.url(:medium) %>
			</div><!-- BookImg -->

			<div class="col-xs-9">
				<ul class="book-info">
					<li>
						<h3><%= @book.title %></h3>
						
						<p>Precio:<%= @book.price %>0</p>
						<p>Autor: <%= @book.author %></p>
						<p>AÃ±o: <%= @book.publication_year %></p>
						<p>Editorial: <%= @book.publisher %></p>
						<p>Categoria(s): <%= @categories %></p><br>	
				</ul>
			</div><!-- BookInfo -->
		</div>
		

			<div class="row">

				<div class="col-md-12 book-description">
					<h4>Resumen</h4>
					<p class="description"><%= @book.description %></p>
				</div>	

			</div>

			<% if current_user  %>
				<%= link_to edit_book_path(@book)  do %>
				  <span class="glyphicon glyphicon-pencil"></span> Edit
				<% end %>
			<% end %>

		</div>

	<div class="col-md-3 text-center">
		<%= render 'books/books_random' %>
	</div>

</div>
