<div class="wrap">
<div class="container product-spacer" id="product-spacer">
  <div class="row">
    <div class="col-sm-5">
      <div class="product-pic">
        <%= image_tag @book.cover.url, class: "product-img"%>
      </div>
    </div>
    <div class="col-sm-5 col-sm-offset-1">
      <div class="row">
        <% if current_user && current_user  %>
          <p class="pull-right"><%= link_to t("editar_libro"), edit_book_path(@book.id)  %><p>
        <% end %>
        <br>
        <h3 class="product-title"><strong><%= @book.title %></strong>
          <h4 class="product-author"><strong>Autor:</strong> <%= @book.author %></h4>
          <h4 class="product-publisher"><strong>Editorial:</strong> <%= @book.publisher %></h4>
          <h4 class="product-publication_year"><strong>Año de Publicación:</strong> <%= @book.publication_year %></h4>
          <h4 class="product-country_of_origin"><strong>País de origen:</strong> <%= @book.country_of_origin %></h4>
          <% if @book.categories[0].present? %>
            <h4 class="product-category"><strong>Categoría:</strong> <%= @book.categories[0].name %></h4>
          <% end %>
        <span> 
          <% if @book.discount == nil %>
            <p class="price pull-right">$<%= @book.price.to_i %></p>
            </h3>
          <% else %>
            <p class="price pull-right"><strong> $<%= @book.discount.to_i %></strong> </p>
            </h3>
            <p class="price pull-right"> Antes $<%= @book.price.to_i %> </p>
            <br>
          <% end %>
        </span>
        <hr>
        <br>
        <p class="description"><%= @book.description %></p>
        <br>
  
        </div>
      </div>
    </div>
  </div>
</div> 

</div>



