<div class="row">
  <%= form_for @quotation, html: { multipart: true } do |f| %>

  <form class="form-control">

    <% if @quotation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@quotation.errors.count, "error") %> prohibited this quotation from being saved:</h2>
        <ul>
          <% @quotation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="col-md-10 main-quotation-section">
      
      <!-- Client Section -->
      <div class="col-md-9 client-section"> 
        <%= f.label :Cliente %><br>
        <ul class="category_list">
          <% Client.recent.each do |client| %>
            <li class="category_">
              <%= check_box_tag "client_ids[]", client.id, @quotation.client, :name => 'quotation[client_ids][]' %>  <%=client.name %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Books Section -->
      <div class="col-md-9 books-section">
        <%= f.label :Libros %> <br>
        <ul class="books-list">
          <% @books.each do |book| %>

            <li class="book_">
              <%= check_box_tag "books_ids[]", book.id, @quotation.books.include?(book), :title => 'quotation[books_ids][]' %>  <%=book.title %>
            </li>

          <% end %>
        </ul>
      </div>

    <div class="col-md-3">
       <button type="submit" class="btn btn-default">Crear Cotizaci√≥n</button>
    </div>

    </div>
  </form>

  <% end %>
</div>
