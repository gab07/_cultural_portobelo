<div class="row">
	<div class="col-md-4">
		<h1>Búsqueda Avanzada</h1>

		<%= form_for @search, html: {class: "pure-form"} do |s| %>

			<div class="field">
				<%= s.label :keywords %> <br>
				<%= s.text_field :keywords %>
			</div>

			<div class="field">
					<%= s.label :category %> <br>
					<%= s.select :category, options_for_select(@categories), :include_blank => true %>
				</div>

			<div class="field">
					<p><%= s.label :min_price, "Precio Mínimo" %> - <%= s.text_field :min_price, size: 10 %> </p>
					<p><%= s.label :max_price, "Precio Máximo" %> - <%= s.text_field :max_price, size: 10 %> </p>
			</div>

			<div class="field">
					<%= s.label :isbn, "ISBN" %> - <%= s.text_field :isbn, size: 10 %>
			</div>

			<div class="actions"> <%= s.submit "Search", class: "pure-button pure-button-primary" %></div>
			
		<% end %>

		<p><%= link_to "Atras", books_path %></p>
	</div>
	<div class="col-md-8">
		<h1>Resultados</h1>
		<p><%= link_to "Atras", new_search_path %></p>
		<% if @search.search_books.empty? %>
		<p>No se encontraron resultados</p>
		<% else %>
		<div id="books" class="transitions-enabled">
			<% @search.search_books.each do |c| %>
			<div class="panel panel-default">
				<div class="panel-heading center">
					<%= link_to image_tag(c.cover.url(:medium)), c %>
				</div>
				<div class="panel-body">
					<ul class="book_info">
						<li>
							<p><%= c.price %></p>
						</li>
						<li>
							<p><%= c.title %></p>
						</li>
						<li>
							<p><%= c.author %></p>
						</li>
						<li>
							<p><%= c.publisher %></p>
						</li>
						<li>
							<p><%= c.publication_year %></p>
						</li>
						<li>
							<p><%= c.isbn %></p>
						</li>
						<li>
							<p><%= c.pages %></p>
						</li>
						<li>
							<p><%= c.binding_type %></p>
						</li>
						<li>
							<p><%= c.language %></p>
						</li>
					</ul>
					<br>
					<% if current_user %>
					<div class="actions">
						<%= link_to edit_book_path(c) do %>
						<span class="glyphicon glyphicon-pencil"></span> Edit
						<% end %>
						<%= link_to c, method: :delete, data: { confirm: 'Are you sure?' } do %>
						<span class="glyphicon glyphicon-trash"></span> Delete
						<% end %>
					</div>
					<% end %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	
	<br>
	
	
</div>
<% end %>